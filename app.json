{
  "id": "com.samsung.smart",
  "version": "1.0.1",
  "compatibility": ">=2.0.0",
  "sdk": 2,
  "name": {
    "en": "Samsung SmartTV app"
  },
  "description": {
    "en": "Samsung Smart TV 2016+ model"
  },
  "category": [
    "video"
  ],
  "tags": {
    "en": [
      "samsung",
      "tv"
    ]
  },
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "homeyCommunityTopicId": 10019,
  "author": {
    "name": "Bjørnar Almli",
    "email": "bjornar.almli@gmail.com"
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "bjornaralmli"
      }
    }
  },
  "contributors": {
    "developers": [
      {
        "name": "Bjørnar Almli",
        "email": "bjornar.almli@gmail.com"
      }
    ]
  },
  "flow": {
    "triggers": [
      {
        "id": "turned_on",
        "title": {
          "en": "TV is turned on"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Samsung"
          }
        ]
      },
      {
        "id": "turned_off",
        "title": {
          "en": "TV is turned off"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Samsung"
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "is_on",
        "title": {
          "en": "Is !{{on|off}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Samsung"
          }
        ]
      },
      {
        "id": "is_app_running",
        "title": {
          "en": "Is app !{{running|not running}}"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=Samsung"
          },
          {
            "name": "app_id",
            "type": "autocomplete",
            "placeholder": {
              "en": "Search for app..."
            }
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "launch_app",
        "title": {
          "en": "Launch app"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=Samsung"
          },
          {
            "name": "app_id",
            "type": "autocomplete",
            "placeholder": {
              "en": "Search for app..."
            }
          }
        ]
      },
      {
        "id": "browse",
        "title": {
          "en": "Launch browser"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=Samsung"
          },
          {
            "name": "url",
            "type": "text",
            "title": {
              "en": "URL"
            }
          }
        ]
      },
      {
        "id": "youtube",
        "title": {
          "en": "Launch video on YouTube"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=Samsung"
          },
          {
            "name": "videoId",
            "type": "text",
            "title": {
              "en": "Provide the YouTube video id"
            }
          }
        ]
      },
      {
        "id": "send_key",
        "title": {
          "en": "Send key"
        },
        "hint": {
          "en": "Send key"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=Samsung"
          },
          {
            "name": "key",
            "type": "autocomplete",
            "placeholder": {
              "en": "Search for key..."
            }
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "Samsung",
      "name": {
        "en": "Samsung"
      },
      "class": "tv",
      "capabilities": [
        "onoff",
        "volume_mute",
        "volume_up",
        "volume_down",
        "channel_up",
        "channel_down"
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General settings"
          },
          "children": [
            {
              "id": "ipaddress",
              "type": "text",
              "label": {
                "en": "IP address"
              },
              "value": ""
            }
          ]
        }
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_my_devices"
          }
        },
        {
          "id": "add_my_devices",
          "template": "add_devices"
        }
      ],
      "images": {
        "large": "/drivers/Samsung/assets/images/large.png",
        "small": "/drivers/Samsung/assets/images/small.png"
      }
    }
  ]
}